<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <Button
                android:text="ว่าง"
                android:layout_width="123dp"
                android:layout_height="90dp"
                android:id="@+id/C1" tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/C2"
        />
        <Button
                android:text="ว่าง"
                android:layout_width="123dp"
                android:layout_height="90dp"
                android:id="@+id/C2" tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp"
                app:layout_constraintEnd_toStartOf="@+id/C3" android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" app:layout_constraintStart_toEndOf="@+id/C1"
                android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>
        <Button
                android:text="ว่าง"
                android:layout_width="123dp"
                android:layout_height="90dp"
                android:id="@+id/C3" tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="27dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="ชื่อเจ้าของรถ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_id"/>
        <TextView
                android:text="รุ่นของรถ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editText_name"/>
        <TextView
                android:text="เลขทะเบียน"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/C1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <EditText
                android:layout_width="382dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_id"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/C2" android:hint="กรอกเลขทะเบียน"/>
        <EditText
                android:layout_width="382dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_brand"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.333"
                android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/editText_name"
                android:hint="กรอกรุ่นของรถ"/>
        <EditText
                android:layout_width="382dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.333" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_id" android:hint="กรอกชื่อเจ้าของรถ"/>
        <Button
                android:text="ยกเลิก"
                android:layout_width="165dp"
                android:layout_height="56dp"
                android:id="@+id/button_cancel" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_brand"
                android:textColor="@android:color/background_light" android:background="#FF3333"/>
        <Button
                android:text="ยืนยัน"
                android:layout_width="165dp"
                android:layout_height="56dp"
                android:id="@+id/button_confirm"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_brand"
                android:textColor="@android:color/background_light" android:background="@android:color/holo_green_dark"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

